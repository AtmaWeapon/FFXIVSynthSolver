<Window x:Class="Simulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="395.092" Width="525" Initialized="Window_Initialized">
  <Grid Margin="0,10,0,0">
    <TextBox Name="txtStatusLog" Margin="0,282,0,0" TextWrapping="Wrap"/>
    <Button x:Name="btnAccept" Content="Solve!" HorizontalAlignment="Left" Height="29" Margin="62,245,0,0" VerticalAlignment="Top" Width="160" Click="AcceptButton_Click"/>
    <Button x:Name="btnCancel" Content="Exit" HorizontalAlignment="Left" Height="29" Margin="299,245,0,0" VerticalAlignment="Top" Width="157" Click="CancelButton_Click"/>

    <Border BorderBrush="Black" Background="Aqua" BorderThickness="1" HorizontalAlignment="Left" Height="86" VerticalAlignment="Top" Width="157" Margin="62,138,0,0">
      <Grid>
        <RadioButton x:Name="radioSuccessPoor" Content="Poor" GroupName="Buttons" HorizontalAlignment="Left" Height="18" Margin="10,2,0,0" VerticalAlignment="Top" Width="134" Checked="radio_Checked"/>
        <RadioButton x:Name="radioSuccessNormal" Content="Normal" GroupName="Buttons" HorizontalAlignment="Left" Height="18" Margin="10,20,0,0" VerticalAlignment="Top" Width="134" Checked="radio_Checked"/>
        <RadioButton x:Name="radioSuccessGood" Content="Good" GroupName="Buttons" HorizontalAlignment="Left" Height="18" Margin="10,38,0,0" VerticalAlignment="Top" Width="134" Checked="radio_Checked"/>
        <RadioButton x:Name="radioSuccessExcellent" Content="Excellent" GroupName="Buttons" HorizontalAlignment="Left" Height="18" Margin="10,56,0,0" VerticalAlignment="Top" Width="134" Checked="radio_Checked"/>
      </Grid>
    </Border>
    <Border BorderBrush="Black" Background="Aqua" BorderThickness="1" HorizontalAlignment="Left" Height="86" Margin="299,138,0,0" VerticalAlignment="Top" Width="157">
      <Grid Margin="0,0,0,0">
        <RadioButton x:Name="radioFailurePoor" Content="Poor" GroupName="Buttons" HorizontalAlignment="Left" Height="18" Margin="10,2,0,0" VerticalAlignment="Top" Width="134" Checked="radio_Checked"/>
        <RadioButton x:Name="radioFailureNormal" Content="Normal" GroupName="Buttons" IsChecked="True" HorizontalAlignment="Left" Height="18" Margin="10,20,0,0" VerticalAlignment="Top" Width="134" Checked="radio_Checked"/>
        <RadioButton x:Name="radioFailureGood" Content="Good" GroupName="Buttons" HorizontalAlignment="Left" Height="18" Margin="10,38,0,0" VerticalAlignment="Top" Width="134" Checked="radio_Checked"/>
        <RadioButton x:Name="radioFailureExcellent" Content="Excellent" GroupName="Buttons" HorizontalAlignment="Left" Height="18" Margin="10,56,0,0" VerticalAlignment="Top" Width="134" Checked="radio_Checked"/>
      </Grid>
    </Border>
    <Label Content="Success" HorizontalAlignment="Left" Height="31" Margin="112,107,0,0" VerticalAlignment="Top"/>
    <Label Content="Failure" HorizontalAlignment="Left" Height="31" Margin="353,107,0,0" VerticalAlignment="Top"/>
    <Label Content="Quality" HorizontalAlignment="Left" Height="27" Margin="54,12,0,0" VerticalAlignment="Top" Width="66" HorizontalContentAlignment="Right"/>
    <Label Content="Progress" HorizontalAlignment="Left" Height="27" Margin="54,39,0,0" VerticalAlignment="Top" Width="66" HorizontalContentAlignment="Right"/>
    <Label Content="Durability" HorizontalAlignment="Left" Height="27" Margin="258,39,0,0" VerticalAlignment="Top" Width="66" HorizontalContentAlignment="Right"/>
    <Label Content="CP" HorizontalAlignment="Left" Height="27" Margin="258,12,0,0" VerticalAlignment="Top" Width="66" HorizontalContentAlignment="Right"/>
    <Label Content="Condition" HorizontalAlignment="Left" Height="27" Margin="54,66,0,0" VerticalAlignment="Top" Width="66" HorizontalContentAlignment="Right"/>
    <Label Content="Best Action" HorizontalAlignment="Left" Height="27" Margin="246,66,0,0" VerticalAlignment="Top" Width="78" HorizontalContentAlignment="Right"/>
    <Label x:Name="lblQuality" Content="" HorizontalAlignment="Left" Height="27" Margin="125,12,0,0" VerticalAlignment="Top" Width="94"/>
    <Label x:Name="lblProgress" Content="" HorizontalAlignment="Left" Height="27" Margin="125,39,0,0" VerticalAlignment="Top" Width="94"/>
    <Label x:Name="lblCondition" Content="" HorizontalAlignment="Left" Height="27" Margin="125,66,0,0" VerticalAlignment="Top" Width="94"/>
    <Label x:Name="lblCP" Content="" HorizontalAlignment="Left" Height="27" Margin="329,12,0,0" VerticalAlignment="Top" Width="94"/>
    <Label x:Name="lblDurability" Content="" HorizontalAlignment="Left" Height="27" Margin="329,39,0,0" VerticalAlignment="Top" Width="94"/>
    <Label x:Name="lblAction" Content="" HorizontalAlignment="Left" Height="27" Margin="329,66,0,0" VerticalAlignment="Top" Width="94"/>
  </Grid>
</Window>
